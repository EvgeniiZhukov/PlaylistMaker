<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    android:orientation="vertical"
    android:theme="@style/Theme.PlaylistMaker"
    android:padding="16dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_weight="0"
        android:text="@string/app_name"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="22sp" />

    <Button
        android:id="@+id/buttonSearch"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="0dp"
        android:text="@string/Search"
        app:cornerRadius="@dimen/buttonRadius"
        app:icon="@drawable/ic_vector"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/iconPuddingForButtons"
        app:iconTint="@color/buttonTextOrItem"
        style="@style/MainScreenButtonStyle"/>

    <Button
        android:id="@+id/buttonMedia"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:text="@string/Media"
        app:cornerRadius="@dimen/buttonRadius"
        app:icon="@drawable/library_vector"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/iconPuddingForButtons"
        app:iconTint="@color/buttonTextOrItem"
        style="@style/MainScreenButtonStyle"/>

    <Button
        android:id="@+id/buttonSettings"
        android:layout_marginBottom="12dp"
        android:text="@string/Settings"
        app:cornerRadius="@dimen/buttonRadius"
        app:icon="@drawable/settings_vector"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/iconPuddingForButtons"
        app:iconTint="@color/buttonTextOrItem"
        style="@style/MainScreenButtonStyle"
        />

</LinearLayout>